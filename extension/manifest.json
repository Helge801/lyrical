{
  "manifest_version": 2,
  "name": "Lyrical",
  "version": "1.0.1",

  "background": {
    "scripts": ["dist/background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "images/lyrical-icon-16.png",
    "default_title": "Lyrical",
    "default_popup": "popup/popup.html"
  },

  "icons": {
    "16": "images/lyrical-icon-16.png",
    "32": "images/lyrical-icon-32.png",
    "48": "images/lyrical-icon-48.png",
    "128": "images/lyrical-icon-128.png"
  },

  "permissions": [
    "activeTab",
    "webRequest",
    "http://www.songlyrics.com/*",
    "https://www.azlyrics.com/*"
  ]
}
